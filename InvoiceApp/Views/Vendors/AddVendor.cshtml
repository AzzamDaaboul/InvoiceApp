@model VendorsViewModel

@{
	ViewData["Title"] = "Add Vendor";
}

<form  method="post"   asp-controller="vendors" asp-action="AddVendor" enctype="application/x-www-form-urlencoded" >
	 
	<h1>Add Vendor</h1>
  @await Html.PartialAsync("_FormatVendors", Model)

	 <button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Vendors" asp-action="GetAllVendors" class="btn btn-primary">Cancel</a>
  </form>

